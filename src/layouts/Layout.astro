---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import FloatingMenu from '../components/FloatingMenu.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import FontLoader from '../components/FontLoader.astro';
import 'aos/dist/aos.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nowoczesna agencja interaktywna - tworzymy strony internetowe i aplikacje webowe" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title transition:animate="fade">{title}</title>
    <ViewTransitions fallback="animate" />
    <FontLoader />
    <link rel="preload" href="/assets/logo.png" as="image" />
    <script>
      import Alpine from 'alpinejs';
      window.Alpine = Alpine;
      Alpine.start();
    </script>
  </head>
  <body class="bg-light">
    <div class="root-wrapper overflow-x-hidden">
      <Navbar />
      <slot />
    </div>
    <FloatingWhatsApp />
    <FloatingMenu />
    <script>
      import AOS from 'aos';
      
      document.addEventListener('astro:page-load', () => {
        AOS.init({
          duration: 800,
          once: false,
          offset: 100,
          delay: 100,
          easing: 'ease-out-cubic',
        });
      });

      document.addEventListener('astro:after-swap', () => {
        AOS.refresh();
      });

      // Handle view transitions
      document.addEventListener('astro:before-preparation', () => {
        document.documentElement.classList.add('transition-active');
      });

      document.addEventListener('astro:after-preparation', () => {
        document.documentElement.classList.remove('transition-active');
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 239, 35, 60;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #4a90e2 30%, white 60%);
    --transition-duration: 0.5s;
    --transition-timing: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
  }

  .glass {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Modern CTA Button Animations */
  .cta-button {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150%;
    height: 150%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%) rotate(45deg) scale(0);
    transition: transform 0.6s ease;
    z-index: -1;
  }

  .cta-button:hover::before {
    transform: translate(-50%, -50%) rotate(45deg) scale(1);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -10px rgba(var(--accent), 0.5);
  }

  .cta-button:active {
    transform: translateY(0);
  }

  /* Secondary CTA Button */
  .cta-button-secondary {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .cta-button-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.6s ease;
    z-index: -1;
  }

  .cta-button-secondary:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Pulse Animation for Important CTAs */
  .cta-pulse {
    animation: ctaPulse 2s infinite;
  }

  @keyframes ctaPulse {
    0% {
      box-shadow: 0 0 0 0 rgba(var(--accent), 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(var(--accent), 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(var(--accent), 0);
    }
  }

  /* Hover Effect for Cards */
  .hover-card {
    transition: all 0.3s ease;
  }

  .hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.1);
  }

  /* View Transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Keep navbar visible during transitions */
  nav {
    view-transition-name: nav;
  }

  ::view-transition-old(nav),
  ::view-transition-new(nav) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Ensure smooth transitions */
  .transition-active {
    pointer-events: none;
  }

  .root-wrapper {
    min-height: 100vh;
    position: relative;
    width: 100%;
    padding-top: 5rem; /* Add padding to account for fixed navbar */
  }

  /* Optional: Add support for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation: none !important;
    }

    html {
      scroll-behavior: auto !important;
    }

    .transition-active {
      pointer-events: auto;
    }
  }
</style>