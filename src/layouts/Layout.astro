---
import { ViewTransitions, fade, slide } from 'astro:transitions';
import FloatingMenu from '../components/FloatingMenu.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import FontLoader from '../components/FontLoader.astro';
import 'aos/dist/aos.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nowoczesna agencja interaktywna - tworzymy strony internetowe i aplikacje webowe" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title transition:animate="slide">{title}</title>
    <ViewTransitions fallback="animate" />
    <FontLoader />
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link rel="preload" href="/assets/logo.png" as="image" />
  </head>
  <body class="bg-light">
    <div transition:animate="fade" transition:duration="0.8">
      <slot />
    </div>
    <FloatingWhatsApp />
    <FloatingMenu />
    <script>
      import AOS from 'aos';
      
      document.addEventListener('astro:page-load', () => {
        AOS.init({
          duration: 800,
          once: false,
          offset: 100,
          delay: 100,
          easing: 'ease-out-cubic',
        });
      });

      document.addEventListener('astro:after-swap', () => {
        AOS.refresh();
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 239, 35, 60;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #4a90e2 30%, white 60%);
  }
  
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', sans-serif;
  }

  .glass {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Modern CTA Button Animations */
  .cta-button {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150%;
    height: 150%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%) rotate(45deg) scale(0);
    transition: transform 0.6s ease;
    z-index: -1;
  }

  .cta-button:hover::before {
    transform: translate(-50%, -50%) rotate(45deg) scale(1);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -10px rgba(var(--accent), 0.5);
  }

  .cta-button:active {
    transform: translateY(0);
  }

  /* Secondary CTA Button */
  .cta-button-secondary {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .cta-button-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.6s ease;
    z-index: -1;
  }

  .cta-button-secondary:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Pulse Animation for Important CTAs */
  .cta-pulse {
    animation: ctaPulse 2s infinite;
  }

  @keyframes ctaPulse {
    0% {
      box-shadow: 0 0 0 0 rgba(var(--accent), 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(var(--accent), 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(var(--accent), 0);
    }
  }

  /* Hover Effect for Cards */
  .hover-card {
    transition: all 0.3s ease;
  }

  .hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.1);
  }

  /* Add transition animations */
  @keyframes slide-from-right {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slide-to-left {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(-100%);
      opacity: 0;
    }
  }

  @keyframes scale-up {
    from {
      transform: scale(0.95);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Custom transition classes */
  .page-transition {
    view-transition-name: page;
  }

  .hero-transition {
    view-transition-name: hero;
  }

  .nav-transition {
    view-transition-name: nav;
  }

  ::view-transition-old(root) {
    animation: 0.5s cubic-bezier(0.76, 0, 0.24, 1) both slide-to-left;
  }

  ::view-transition-new(root) {
    animation: 0.5s cubic-bezier(0.76, 0, 0.24, 1) both slide-from-right;
  }

  ::view-transition-old(page),
  ::view-transition-new(page) {
    animation: 0.6s cubic-bezier(0.76, 0, 0.24, 1) both scale-up;
  }
</style>