---
import { ViewTransitions } from 'astro:transitions';
import FloatingMenu from '../components/FloatingMenu.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import FontLoader from '../components/FontLoader.astro';
import 'aos/dist/aos.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nowoczesna agencja interaktywna - tworzymy strony internetowe i aplikacje webowe" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title transition:animate="slide">{title}</title>
    <ViewTransitions />
    <FontLoader />
    <link rel="preload" href="/assets/logo.png" as="image" />
  </head>
  <body class="bg-light">
    <div class="root-wrapper overflow-x-hidden">
      <slot />
    </div>
    <FloatingWhatsApp />
    <FloatingMenu />
    <script>
      import AOS from 'aos';
      
      document.addEventListener('astro:page-load', () => {
        AOS.init({
          duration: 800,
          once: false,
          offset: 100,
          delay: 100,
          easing: 'ease-out-cubic',
        });
      });

      document.addEventListener('astro:after-swap', () => {
        AOS.refresh();
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 239, 35, 60;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #4a90e2 30%, white 60%);
  }
  
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
  }

  .glass {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Modern CTA Button Animations */
  .cta-button {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150%;
    height: 150%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%) rotate(45deg) scale(0);
    transition: transform 0.6s ease;
    z-index: -1;
  }

  .cta-button:hover::before {
    transform: translate(-50%, -50%) rotate(45deg) scale(1);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -10px rgba(var(--accent), 0.5);
  }

  .cta-button:active {
    transform: translateY(0);
  }

  /* Secondary CTA Button */
  .cta-button-secondary {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .cta-button-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.6s ease;
    z-index: -1;
  }

  .cta-button-secondary:hover::before {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Pulse Animation for Important CTAs */
  .cta-pulse {
    animation: ctaPulse 2s infinite;
  }

  @keyframes ctaPulse {
    0% {
      box-shadow: 0 0 0 0 rgba(var(--accent), 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(var(--accent), 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(var(--accent), 0);
    }
  }

  /* Hover Effect for Cards */
  .hover-card {
    transition: all 0.3s ease;
  }

  .hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.1);
  }

  /* Add transition animations */
  @keyframes slide-from-right {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slide-to-left {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(-100%);
      opacity: 0;
    }
  }

  @keyframes scale-up {
    from {
      transform: scale(0.95);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Custom transition classes */
  .page-transition {
    view-transition-name: page;
    width: 100%;
    position: relative;
    overflow: visible;
  }

  .hero-transition {
    view-transition-name: hero;
  }

  .nav-transition {
    view-transition-name: nav;
  }

  ::view-transition-old(root) {
    animation: 0.5s cubic-bezier(0.76, 0, 0.24, 1) both slide-to-left;
  }

  ::view-transition-new(root) {
    animation: 0.5s cubic-bezier(0.76, 0, 0.24, 1) both slide-from-right;
  }

  ::view-transition-old(page),
  ::view-transition-new(page) {
    animation: 0.6s cubic-bezier(0.76, 0, 0.24, 1) both scale-up;
  }

  /* Standardized transition animations */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(page) {
    animation: 
      0.5s cubic-bezier(0.76, 0, 0.24, 1) both fade-out,
      0.5s cubic-bezier(0.76, 0, 0.24, 1) both slide-to-left;
  }

  ::view-transition-new(page) {
    animation: 
      0.5s cubic-bezier(0.76, 0, 0.24, 1) both fade-in,
      0.5s cubic-bezier(0.76, 0, 0.24, 1) both slide-from-right;
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-out {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  @keyframes slide-from-right {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
  }

  @keyframes slide-to-left {
    from { transform: translateX(0); }
    to { transform: translateX(-100%); }
  }

  /* Ensure smooth transitions for all pages */
  main {
    view-transition-name: page;
    min-height: 100vh;
    width: 100%;
    position: relative;
    overflow: visible;
  }

  /* Keep navbar visible during transitions */
  nav {
    view-transition-name: nav;
  }

  ::view-transition-old(nav),
  ::view-transition-new(nav) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Updated View Transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Refined page transition */
  .page-transition {
    view-transition-name: page;
  }

  ::view-transition-old(page) {
    animation: 
      0.4s cubic-bezier(0.4, 0, 0.2, 1) both fade-out,
      0.4s cubic-bezier(0.4, 0, 0.2, 1) both slide-out;
  }

  ::view-transition-new(page) {
    animation: 
      0.4s cubic-bezier(0.4, 0, 0.2, 1) both fade-in,
      0.4s cubic-bezier(0.4, 0, 0.2, 1) both slide-in;
  }

  /* Subtle navbar transition */
  .nav-transition {
    view-transition-name: nav;
  }

  ::view-transition-old(nav),
  ::view-transition-new(nav) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* More subtle animations */
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-out {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  @keyframes slide-in {
    from { transform: translateY(10px); }
    to { transform: translateY(0); }
  }

  @keyframes slide-out {
    from { transform: translateY(0); }
    to { transform: translateY(-10px); }
  }

  /* Hero section transition */
  .hero-transition {
    view-transition-name: hero;
  }

  ::view-transition-old(hero),
  ::view-transition-new(hero) {
    animation: 
      0.5s cubic-bezier(0.4, 0, 0.2, 1) both fade-scale;
  }

  @keyframes fade-scale {
    from {
      opacity: 0;
      transform: scale(0.98);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Smooth image transitions */
  img {
    view-transition-name: auto;
    transition: transform 0.3s ease;
  }

  /* Content blocks transition */
  .content-block {
    view-transition-name: content;
  }

  ::view-transition-old(content),
  ::view-transition-new(content) {
    animation: 
      0.4s cubic-bezier(0.4, 0, 0.2, 1) both fade-slide;
  }

  @keyframes fade-slide {
    from {
      opacity: 0;
      transform: translateY(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Ensure smooth scrolling */
  html {
    scroll-behavior: smooth;
    overflow-y: scroll; /* Prevent layout shift */
  }

  /* Prevent FOUC during transitions */
  .transition-ready {
    animation: none !important;
  }

  /* Optional: Add support for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation: none !important;
    }

    html {
      scroll-behavior: auto !important;
    }
  }

  /* Simplified page transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  main {
    view-transition-name: main;
  }

  ::view-transition-old(main) {
    animation: 0.4s cubic-bezier(0.4, 0, 0.2, 1) both fade-out;
  }

  ::view-transition-new(main) {
    animation: 0.4s cubic-bezier(0.4, 0, 0.2, 1) both fade-in;
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-out {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  /* Keep navbar visible during transitions */
  nav {
    view-transition-name: nav;
  }

  ::view-transition-old(nav),
  ::view-transition-new(nav) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Optional: Add support for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation: none !important;
    }
  }

  /* Add these styles */
  .root-wrapper {
    min-height: 100vh;
    position: relative;
    width: 100%;
  }
</style>