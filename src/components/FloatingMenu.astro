---
const { pathname } = Astro.url;
const isEnglish = pathname.startsWith('/en');

// Route mapping between English and Polish paths
const routeMapping = {
  // English to Polish
  '/en/': '/',
  '/en/services': '/uslugi',
  '/en/portfolio': '/realizacje',
  '/en/about': '/o-nas',
  '/en/blog': '/blog',
  '/en/contact': '/kontakt',
  
  // Polish to English
  '/': '/en/',
  '/uslugi': '/en/services',
  '/realizacje': '/en/portfolio',
  '/o-nas': '/en/about',
  '/blog': '/en/blog',
  '/kontakt': '/en/contact'
};

const switchUrl = isEnglish 
  ? routeMapping[pathname] || '/' 
  : routeMapping[pathname] || '/en/'

const menuItems = isEnglish ? [
  { href: "/en/", text: "Home", icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
  { href: "/en/services", text: "Services", icon: "M13 10V3L4 14h7v7l9-11h-7z" },
  { href: "/en/about", text: "About", icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" },
  { href: "/en/portfolio", text: "Portfolio", icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" },
  { href: "/en/blog", text: "Blog", icon: "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" },
  { href: "/en/contact", text: "Contact", icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" }
] : [
  { href: "/", text: "Strona Główna", icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
  { href: "/uslugi", text: "Usługi", icon: "M13 10V3L4 14h7v7l9-11h-7z" },
  { href: "/o-nas", text: "O nas", icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" },
  { href: "/realizacje", text: "Realizacje", icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" },
  { href: "/blog", text: "Blog", icon: "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" },
  { href: "/kontakt", text: "Kontakt", icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" }
];

const languages = [
  { 
    code: 'en',
    name: 'English',
    flag: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 30">
      <clipPath id="s">
        <path d="M0,0 v30 h60 v-30 z"/>
      </clipPath>
      <path d="M0,0 v30 h60 v-30 z" fill="#012169"/>
      <path d="M0,0 L60,30 M60,0 L0,30" stroke="#fff" stroke-width="6"/>
      <path d="M0,0 L60,30 M60,0 L0,30" clip-path="url(#s)" stroke="#C8102E" stroke-width="4"/>
      <path d="M30,0 v30 M0,15 h60" stroke="#fff" stroke-width="10"/>
      <path d="M30,0 v30 M0,15 h60" stroke="#C8102E" stroke-width="6"/>
    </svg>`
  },
  { 
    code: 'pl',
    name: 'Polski',
    flag: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 10">
      <path fill="#fff" d="M0 0h16v10H0z"/>
      <path fill="#dc143c" d="M0 5h16v5H0z"/>
    </svg>`
  }
];

const currentLang = isEnglish ? languages[0] : languages[1];
const targetLang = isEnglish ? languages[1] : languages[0];
---

<div x-data="{ isOpen: false }" class="lg:hidden">
  <!-- Floating Menu Button -->
  <button 
    @click="isOpen = !isOpen"
    class="fixed bottom-6 right-6 z-[60] w-14 h-14 rounded-full bg-accent shadow-lg flex items-center justify-center hover:scale-110 transition-all duration-300 hover:shadow-xl"
    :class="{ 'rotate-90': isOpen }"
    :aria-expanded="isOpen"
    aria-label={isEnglish ? "Main menu" : "Menu główne"}
    aria-controls="mobile-menu"
  >
    <svg 
      class="w-7 h-7 text-white transition-transform duration-300" 
      :class="{ 'hidden': isOpen }"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
    <svg 
      class="w-7 h-7 text-white transition-transform duration-300" 
      :class="{ 'hidden': !isOpen }"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Language Switcher Button -->
  <a
    href={switchUrl}
    class="fixed bottom-6 right-24 z-[60] w-14 h-14 rounded-full bg-white shadow-lg flex items-center justify-center hover:scale-110 transition-all duration-300 hover:shadow-xl border border-gray-100"
    aria-label={isEnglish ? "Switch to Polish" : "Przełącz na angielski"}
  >
    <div class="w-8 h-5 rounded-sm overflow-hidden shadow-sm border border-gray-100" set:html={targetLang.flag} />
  </a>

  <!-- Full Screen Menu -->
  <div 
    id="mobile-menu"
    x-show="isOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-[50] bg-gradient-to-br from-primary to-accent"
    role="dialog"
    aria-modal="true"
    aria-label={isEnglish ? "Mobile menu" : "Menu mobilne"}
    style="display: none;"
  >
    <!-- Menu content -->
    <nav class="h-full flex flex-col justify-between px-8 py-20">
      <!-- Main Navigation -->
      <div class="flex flex-col items-end space-y-6">
        {menuItems.map((item) => (
          <a 
            href={item.href} 
            @click="isOpen = false"
            class="group flex items-center space-x-4 text-2xl font-medium text-white/90 hover:text-white transition-all"
          >
            <span class="relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-white after:transition-all after:duration-300 group-hover:after:w-full">
              {item.text}
            </span>
            <svg 
              class="w-6 h-6 opacity-60 group-hover:opacity-100 transform group-hover:translate-x-1 transition-all duration-300" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
            </svg>
          </a>
        ))}
      </div>

      <!-- Bottom Section -->
      <div class="space-y-8">
        <!-- Social Media Links -->
        <div class="flex justify-end space-x-6">
          {['Facebook', 'Instagram', 'LinkedIn'].map((social) => (
            <a 
              href="#"
              class="text-white/60 hover:text-white transition-colors duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="sr-only">{social}</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                {social === 'Facebook' && (
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                )}
                {social === 'Instagram' && (
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                )}
                {social === 'LinkedIn' && (
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                )}
              </svg>
            </a>
          ))}
        </div>

        <!-- Contact Button -->
        <a
          href={isEnglish ? "/en/contact" : "/kontakt"}
          class="inline-flex items-center justify-center w-full px-8 py-4 text-lg font-medium text-accent bg-white rounded-full hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          <span>{isEnglish ? "Get in Touch" : "Skontaktuj się"}</span>
          <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </nav>
  </div>
</div>

<style>
  svg {
    width: 100%;
    height: 100%;
  }

  .rounded-sm {
    border-radius: 2px;
  }
</style> 