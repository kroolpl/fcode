---

<div x-data="{ isOpen: false }" class="lg:hidden">
  <!-- Floating Menu Button -->
  <button 
    @click="isOpen = !isOpen"
    class="fixed bottom-6 right-6 z-[60] w-16 h-16 rounded-full bg-accent shadow-lg flex items-center justify-center hover:scale-110 transition-all duration-300 hover:shadow-xl"
    :class="{ 'rotate-90': isOpen }"
    :aria-expanded="isOpen"
    aria-label="Menu główne"
    aria-controls="mobile-menu"
  >
    <svg 
      class="w-7 h-7 text-white transition-transform duration-300" 
      :class="{ 'hidden': isOpen }"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
    <svg 
      class="w-7 h-7 text-white transition-transform duration-300" 
      :class="{ 'hidden': !isOpen }"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Full Screen Menu -->
  <div 
    id="mobile-menu"
    x-show="isOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-[50]"
    role="dialog"
    aria-modal="true"
    aria-label="Menu mobilne"
    style="display: none;"
  >
    <!-- Background overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary to-accent opacity-98"></div>
    
    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-0 left-0 w-[500px] h-[500px] bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-white/5 rounded-full blur-3xl"></div>
    </div>

    <!-- Menu content -->
    <nav class="relative h-full flex flex-col justify-between px-8 py-20">
      <!-- Main Navigation -->
      <div class="flex flex-col items-end space-y-6 pr-2">
        <p class="text-white/60 text-sm font-medium tracking-wider uppercase mb-4">Menu</p>
        {[
          { href: "/", text: "Strona Główna", delay: 100 },
          { href: "/uslugi", text: "Usługi", delay: 200 },
          { href: "/o-nas", text: "O nas", delay: 300 },
          { href: "/realizacje", text: "Realizacje", delay: 400 },
          { href: "/blog", text: "Blog", delay: 500 },
          { href: "/kontakt", text: "Kontakt", delay: 600 }
        ].map((item) => (
          <a 
            href={item.href} 
            @click="isOpen = false"
            class="group text-4xl font-bold text-white hover:text-white/80 transition-all transform hover:-translate-x-2 duration-200 flex items-center space-x-3"
            data-aos="fade-left"
            data-aos-delay={item.delay}
          >
            <span>{item.text}</span>
            <svg 
              class="w-6 h-6 opacity-0 group-hover:opacity-100 transform -translate-x-2 group-hover:translate-x-0 transition-all duration-200" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        ))}
      </div>

      <!-- Bottom Section with CTA and Social Media -->
      <div class="space-y-8 flex flex-col items-start">
        <!-- Social Media Links -->
        <div class="space-y-4 text-left" data-aos="fade-up" data-aos-delay="700">
          <p class="text-white/60 text-sm font-medium tracking-wider uppercase mb-4" id="social-links-label">Śledź nas</p>
          <div class="flex space-x-6" aria-labelledby="social-links-label">
            <a 
              href="#" 
              class="text-white/80 hover:text-white transition-colors duration-200 hover:scale-110 transform"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Odwiedź nas na Facebooku"
            >
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a 
              href="#" 
              class="text-white/80 hover:text-white transition-colors duration-200 hover:scale-110 transform"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Odwiedź nas na Instagramie"
            >
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a 
              href="#" 
              class="text-white/80 hover:text-white transition-colors duration-200 hover:scale-110 transform"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Odwiedź nas na LinkedIn"
            >
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- CTA Button -->
        <div data-aos="fade-up" data-aos-delay="800">
          <a 
            href="/kontakt" 
            @click="isOpen = false"
            class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-medium overflow-hidden rounded-full bg-white text-primary transition-all duration-300 hover:scale-105 hover:shadow-lg"
            aria-label="Przejdź do formularza darmowej wyceny"
          >
            <span class="relative flex items-center">
              Darmowa Wycena
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </nav>
  </div>
</div> 