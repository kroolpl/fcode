---
import { Image } from 'astro:assets';
import HeroImage from '../assets/images/hero.png';
---

<section class="relative min-h-screen flex items-center overflow-x-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-primary to-accent opacity-5"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 w-full">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-left" data-aos="fade-right">
        <h1 class="text-5xl md:text-7xl font-bold text-primary mb-6">
          Tworzymy <span class="text-accent">cyfrowe</span> doświadczenia
        </h1>
        <p class="text-xl text-secondary mb-10">
          Projektujemy i wdrażamy nowoczesne rozwiązania webowe dla firm, które chcą się wyróżnić
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="#contact"
            class="group relative inline-flex items-center justify-center px-8 py-3 rounded-full text-lg font-medium overflow-hidden bg-accent text-white transition-all duration-300 ease-out hover:scale-105"
          >
            <span class="absolute inset-0 w-full h-full bg-gradient-to-br from-accent via-accent/80 to-accent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"></span>
            <span class="relative flex items-center">
              Rozpocznij projekt
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
          <a
            href="#services"
            class="group relative inline-flex items-center justify-center px-8 py-3 rounded-full text-lg font-medium overflow-hidden border-2 border-primary text-primary transition-all duration-300 ease-out hover:scale-105"
          >
            <span class="absolute inset-0 w-full h-full bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-out"></span>
            <span class="relative flex items-center group-hover:text-white transition-colors duration-300">
              Poznaj nas
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative" data-aos="fade-left">
        <div class="relative animate-float group">
          <div class="relative transition-transform duration-500 ease-out group-hover:scale-[1.02]">
            <Image
              src={HeroImage}
              alt="Hero Image"
              class="w-full h-auto rounded-2xl relative z-10"
              width={800}
              height={600}
              loading="eager"
              decoding="sync"
              format="webp"
              quality={90}
            />
            <!-- Shadow overlay with gradient mask -->
            <div 
              class="absolute inset-0 rounded-2xl transition-all duration-500"
              style="box-shadow: 0 30px 30px -15px rgba(0, 0, 0, 0.9);
                     mask-image: linear-gradient(to top, black 80%, transparent 1%);"
            ></div>
          </div>
          
          <!-- Improved gradient overlay -->
          <div 
            class="absolute inset-0 rounded-2xl z-20 overflow-hidden animate-shine"
            style="background: linear-gradient(
              110deg,
              transparent 25%,
              rgba(255, 255, 255, 0.1) 45%,
              transparent 55%
            );
            background-size: 200% 100%;"
          ></div>
        </div>
        
        <!-- Decorative elements with continuous animation -->
        <div class="absolute -z-10 -top-20 -right-20 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-blob"></div>
        <div class="absolute -z-10 -bottom-20 -left-20 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes shine {
    to {
      background-position: 200% center;
    }
  }

  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(20px, -20px) scale(1.1);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    75% {
      transform: translate(20px, 20px) scale(1.05);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-shine {
    animation: shine 8s linear infinite;
  }

  .animate-blob {
    animation: blob 15s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>