---
import { Image } from 'astro:assets';
import bossImage from '../assets/images/boss.jpeg';

const testimonials = [
  {
    name: "Anna Kowalska",
    role: "CEO, TechStart",
    image: bossImage,
    content: "Współpraca z tym zespołem to czysta przyjemność. Ich innowacyjne podejście i profesjonalizm znacząco wpłynęły na rozwój naszego biznesu online.",
    rating: 5,
    company: "TechStart"
  },
  {
    name: "Marek Nowak",
    role: "Marketing Director, InnovatePL",
    image: bossImage,
    content: "Jestem pod wrażeniem jakości wykonania i terminowości. Strona internetowa, którą dla nas stworzyli, przekroczyła nasze oczekiwania.",
    rating: 5,
    company: "InnovatePL"
  },
  {
    name: "Karolina Wiśniewska",
    role: "Founder, EcoStyle",
    image: bossImage,
    content: "Ich kreatywne rozwiązania i zrozumienie naszych potrzeb pomogły nam zwiększyć sprzedaż online o 200% w ciągu 6 miesięcy.",
    rating: 5,
    company: "EcoStyle"
  }
];
---

<section class="py-20 relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-light to-white">
    <div class="absolute inset-0" style="background: radial-gradient(circle at 50% 50%, rgba(32, 57, 81, 0.05) 0%, transparent 70%);"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium bg-accent/10 text-accent mb-4">
        <span class="animate-pulse mr-2">⭐</span>
        Opinie naszych klientów
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
        Co mówią o nas
        <span class="bg-gradient-to-r from-accent to-[#203951] bg-clip-text text-transparent">
          klienci
        </span>
      </h2>
      <p class="text-xl text-secondary max-w-2xl mx-auto">
        Zobacz, jak pomagamy firmom osiągać sukces w świecie cyfrowym.
      </p>
    </div>

    <!-- Testimonials Slider -->
    <div x-data="{
      currentSlide: 0,
      totalSlides: 3,
      autoplayInterval: null,
      init() {
        this.startAutoplay();
      },
      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, 5000);
      },
      stopAutoplay() {
        clearInterval(this.autoplayInterval);
      },
      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
      },
      prevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
      }
    }" class="relative" @mouseenter="stopAutoplay()" @mouseleave="startAutoplay()">
      <!-- Testimonials Container -->
      <div class="relative overflow-hidden">
        <div class="flex transition-transform duration-500 ease-in-out" :style="{ transform: `translateX(-${currentSlide * 100}%)` }">
          {testimonials.map((testimonial, index) => (
            <div class="w-full flex-shrink-0 px-4">
              <div class="glass rounded-2xl p-8 md:p-12 transition-all duration-300 hover:shadow-xl">
                <div class="flex flex-col md:flex-row gap-8 items-start">
                  <div class="flex-shrink-0">
                    <div class="relative">
                      <Image
                        src={testimonial.image}
                        alt={testimonial.name}
                        class="w-20 h-20 rounded-full object-cover border-4 border-white shadow-lg"
                        width={80}
                        height={80}
                      />
                      <div class="absolute -bottom-2 -right-2 bg-accent text-white rounded-full p-1.5">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center mb-2">
                      {Array.from({ length: testimonial.rating }).map(() => (
                        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      ))}
                    </div>
                    <blockquote class="text-xl md:text-2xl text-primary mb-6 italic">
                      "{testimonial.content}"
                    </blockquote>
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="font-bold text-lg text-primary">{testimonial.name}</div>
                        <div class="text-secondary">{testimonial.role}</div>
                      </div>
                      <div class="text-accent font-medium">{testimonial.company}</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Buttons -->
      <div class="flex justify-center mt-8 gap-4">
        <button 
          @click="prevSlide()"
          class="p-2 rounded-full bg-white/80 text-primary hover:bg-accent hover:text-white transition-colors duration-300 shadow-lg"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <div class="flex items-center gap-2">
          {testimonials.map((_, index) => (
            <button
              @click="currentSlide = ${index}"
              class="w-3 h-3 rounded-full transition-all duration-300"
              :class="currentSlide === ${index} ? 'bg-accent scale-125' : 'bg-accent/20'"
            ></button>
          ))}
        </div>
        <button 
          @click="nextSlide()"
          class="p-2 rounded-full bg-white/80 text-primary hover:bg-accent hover:text-white transition-colors duration-300 shadow-lg"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Trust Bar -->
    <div class="mt-20 pt-12 border-t border-gray-200">
      <p class="text-center text-secondary mb-8">Zaufali nam</p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-60">
        {['TechStart', 'InnovatePL', 'EcoStyle', 'FutureBox', 'SmartTech'].map(company => (
          <div class="text-xl font-bold text-primary/60 hover:text-primary transition-colors duration-300">
            {company}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style>