---
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.png';

const menuItems = [
  { href: '/', text: 'Strona główna' },
  { href: '/uslugi', text: 'Usługi' },
  { href: '/realizacje', text: 'Realizacje' },
  { href: '/o-nas', text: 'O nas' },
  { href: '/blog', text: 'Blog' },
  { href: '/kontakt', text: 'Kontakt' }
];

const currentPath = Astro.url.pathname;
---

<nav
  class="fixed top-0 left-0 right-0 z-50 glass border-b border-white/10"
  x-data="{ isOpen: false }"
  @keydown.escape="isOpen = false"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <Image
          src={logo}
          alt="Logo"
          class="w-auto h-8 transition-transform duration-300 hover:scale-105"
          width={240}
          height={64}
          quality={100}
          format="webp"
        />
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8">
        {menuItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'text-base font-medium transition-all duration-300 hover:text-accent relative group',
              currentPath === item.href ? 'text-accent' : 'text-primary'
            ]}
          >
            {item.text}
            <span class:list={[
              'absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full',
              currentPath === item.href ? 'w-full' : 'w-0'
            ]}></span>
          </a>
        ))}
        <a
          href="/kontakt"
          class="nav-cta-button px-6 py-2 text-white rounded-full font-medium transition-all duration-300"
        >
          Rozpocznij projekt
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          @click="isOpen = !isOpen"
          class="text-primary p-2 rounded-lg hover:bg-gray-100 transition-colors duration-300"
          aria-label="Toggle menu"
        >
          <svg
            x-show="!isOpen"
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
          <svg
            x-show="isOpen"
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            x-cloak
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    x-show="isOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    class="md:hidden glass border-t border-white/10"
    x-cloak
  >
    <div class="px-4 pt-2 pb-3 space-y-1">
      {menuItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'block px-3 py-2 rounded-lg text-base font-medium transition-colors duration-300',
            currentPath === item.href
              ? 'text-accent bg-accent/10'
              : 'text-primary hover:bg-gray-100'
          ]}
        >
          {item.text}
        </a>
      ))}
      <a
        href="/kontakt"
        class="nav-cta-button block px-3 py-2 rounded-lg text-base font-medium text-white transition-colors duration-300 mt-4"
      >
        Rozpocznij projekt
      </a>
    </div>
  </div>
</nav>

<style>
  [x-cloak] {
    display: none !important;
  }

  .glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .nav-cta-button {
    background-color: #203951;
    animation: subtle-pulse 2s infinite;
  }

  .nav-cta-button:hover {
    background-color: #2a4b6a;
    transform: translateY(-1px);
  }

  @keyframes subtle-pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(32, 57, 81, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(32, 57, 81, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(32, 57, 81, 0);
    }
  }
</style>