---
interface Props {
  title: string;
  description: string;
  icon: string;
  features?: string[];
  technologies?: string[];
  index?: number;
}

const { title, description, icon, features = [], technologies = [], index = 0 } = Astro.props;
---

<div class="p-6 rounded-xl hover-card bg-white" data-aos="fade-up" data-aos-delay={index * 100}>
  <span class="material-symbols-outlined text-4xl text-accent mb-4">
    {icon}
  </span>
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  
  {features.length > 0 && (
    <div class="mb-4">
      <h4 class="font-semibold mb-2">Features:</h4>
      <ul class="list-disc list-inside text-gray-600">
        {features.map(feature => (
          <li>{feature}</li>
        ))}
      </ul>
    </div>
  )}
  
  {technologies.length > 0 && (
    <div>
      <h4 class="font-semibold mb-2">Technologies:</h4>
      <div class="flex flex-wrap gap-2">
        {technologies.map(tech => (
          <span class="px-2 py-1 text-sm bg-gray-100 rounded-full text-gray-600">
            {tech}
          </span>
        ))}
      </div>
    </div>
  )}
</div>