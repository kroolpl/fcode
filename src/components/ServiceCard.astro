---
interface Props {
  title: string;
  description: string;
  icon: string;
  features: string[];
  technologies: string[];
  index: number;
}

const { title, description, icon, features, technologies, index } = Astro.props;

const icons = {
  web: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />`,
  app: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
  shop: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
  design: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`
};
---

<article 
  class="glass p-8 rounded-2xl group hover:shadow-xl transition-all duration-300"
  data-aos="fade-up"
  data-aos-delay={index * 100}
>
  <div class="mb-6">
    <div class="bg-accent/10 w-16 h-16 rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[icon]} />
    </div>
    <h3 class="text-2xl font-bold text-primary mb-2">{title}</h3>
    <p class="text-secondary">{description}</p>
  </div>

  <div class="mb-6">
    <h4 class="text-lg font-semibold text-primary mb-3">Funkcjonalno≈õci:</h4>
    <ul class="space-y-2">
      {features.map((feature) => (
        <li class="flex items-center text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          {feature}
        </li>
      ))}
    </ul>
  </div>

  <div>
    <h4 class="text-lg font-semibold text-primary mb-3">Technologie:</h4>
    <div class="flex flex-wrap gap-2">
      {technologies.map((tech) => (
        <span class="px-3 py-1 bg-accent/10 rounded-full text-accent text-sm">
          {tech}
        </span>
      ))}
    </div>
  </div>
</article>