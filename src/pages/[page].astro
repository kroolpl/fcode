---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Get the page parameter
const { page } = Astro.params;

// You can add logic here to determine the page title and content based on the page parameter
const getPageTitle = (page: string) => {
  const titles = {
    'o-nas': 'O nas',
    'uslugi': 'UsÅ‚ugi',
    'kontakt': 'Kontakt',
  };
  return titles[page] || 'Strona';
};
---

<Layout title={`${getPageTitle(page)} - Nowoczesna Agencja Interaktywna`}>
  <Navbar />
  <main class="relative min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-primary">
        {getPageTitle(page)}
      </h1>
      <!-- Add your dynamic page content here -->
    </div>
  </main>
  <Footer />
</Layout> 