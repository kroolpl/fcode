---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

const services = [
  {
    icon: 'web',
    title: 'Strony internetowe',
    description: 'Nowoczesne i responsywne strony www, które przyciągają klientów.',
    features: ['Responsywny design', 'Optymalizacja SEO', 'Szybkie ładowanie']
  },
  {
    icon: 'shop',
    title: 'Sklepy online',
    description: 'Profesjonalne platformy e-commerce napędzające sprzedaż.',
    features: ['Intuicyjny panel', 'Integracje płatności', 'Analityka sprzedaży']
  },
  {
    icon: 'app',
    title: 'Aplikacje webowe',
    description: 'Zaawansowane rozwiązania dostosowane do Twoich potrzeb.',
    features: ['Wydajność', 'Skalowalność', 'Bezpieczeństwo']
  }
];

const stats = [
  { number: '98%', label: 'Zadowolonych klientów' },
  { number: '250+', label: 'Zrealizowanych projektów' },
  { number: '10+', label: 'Lat doświadczenia' },
  { number: '24/7', label: 'Wsparcie techniczne' }
];

const icons = {
  web: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />`,
  shop: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
  app: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`
};
---

<Layout title="Nowoczesna Agencja Interaktywna">
  <Navbar />
  <Hero />
  
  <!-- Services Section -->
  <section class="py-32 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-24">
        <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4" data-aos="fade-up">
          Co oferujemy
        </span>
        <h2 class="text-4xl md:text-5xl font-bold text-primary mt-4" data-aos="fade-up" data-aos-delay="100">
          Nasze <span class="text-accent">Usługi</span>
        </h2>
        <p class="text-xl text-secondary mt-6 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
          Dostarczamy kompleksowe rozwiązania cyfrowe, które pomogą Twojej firmie osiągnąć sukces w internecie.
        </p>
      </div>
      
      <!-- Services Grid -->
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div 
            class="glass p-8 rounded-2xl transition-all duration-300 hover:shadow-xl hover:-translate-y-2 group"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="bg-accent/10 w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-8 w-8 text-accent" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
                set:html={icons[service.icon]}
              />
            </div>
            <h3 class="text-2xl font-bold text-primary mb-4">{service.title}</h3>
            <p class="text-secondary mb-6">{service.description}</p>
            <ul class="space-y-3">
              {service.features.map(feature => (
                <li class="flex items-center text-secondary">
                  <svg class="h-5 w-5 text-accent mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-24 bg-gradient-to-br from-primary to-accent text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8">
        {stats.map((stat, index) => (
          <div 
            class="text-center p-6 rounded-2xl bg-white/10 backdrop-blur-sm"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="text-4xl font-bold mb-2">{stat.number}</div>
            <div class="text-sm opacity-90">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center glass p-12 rounded-2xl" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">
          Gotowy na cyfrową transformację?
        </h2>
        <p class="text-xl text-secondary mb-8 max-w-2xl mx-auto">
          Skontaktuj się z nami i rozpocznij swoją podróż ku sukcesowi w świecie online.
        </p>
        <a
          href="/kontakt"
          class="inline-flex items-center justify-center px-8 py-3 rounded-full text-lg font-medium bg-accent text-white hover:scale-105 transition-transform"
        >
          <span class="flex items-center">
            Rozpocznij projekt
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style>