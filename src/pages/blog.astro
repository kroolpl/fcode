---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

// Import blog post images
import Post1 from '../assets/images/blog/post1.jpg';
import Post2 from '../assets/images/blog/post2.jpg';
import Post3 from '../assets/images/blog/post3.jpg';

const posts = [
  {
    title: 'Jak wybrać odpowiednią technologię dla swojego projektu?',
    excerpt: 'Poznaj kluczowe czynniki, które pomogą Ci podjąć właściwą decyzję przy wyborze stosu technologicznego.',
    image: Post1,
    category: 'Technologia',
    author: 'Jan Kowalski',
    date: '2024-03-15',
    readTime: '5 min',
    slug: 'jak-wybrac-technologie'
  },
  {
    title: 'Trendy w projektowaniu stron internetowych na rok 2024',
    excerpt: 'Odkryj najnowsze trendy w web designie, które zdominują internet w nadchodzącym roku.',
    image: Post2,
    category: 'Design',
    author: 'Anna Nowak',
    date: '2024-03-10',
    readTime: '4 min',
    slug: 'trendy-projektowanie-2024'
  },
  {
    title: 'Optymalizacja SEO - przewodnik dla początkujących',
    excerpt: 'Kompleksowy przewodnik po podstawach optymalizacji dla wyszukiwarek internetowych.',
    image: Post3,
    category: 'SEO',
    author: 'Piotr Wiśniewski',
    date: '2024-03-05',
    readTime: '7 min',
    slug: 'optymalizacja-seo-podstawy'
  }
];

const categories = ['Wszystkie', 'Technologia', 'Design', 'SEO', 'E-commerce', 'Marketing'];
---

<Layout title="Blog - Nowoczesna Agencja Interaktywna">
  <Navbar />
  
  <main class="min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white overflow-x-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4" data-aos="fade-up">
          Blog
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-primary mt-4 mb-6" data-aos="fade-up" data-aos-delay="100">
          Wiedza i <span class="text-accent">inspiracje</span>
        </h1>
        <p class="text-xl text-secondary max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
          Najnowsze trendy, porady i analizy ze świata technologii i designu
        </p>
      </div>

      <!-- Categories -->
      <div class="flex flex-wrap justify-center gap-4 mb-16" data-aos="fade-up" data-aos-delay="300">
        {categories.map((category) => (
          <button 
            class="px-6 py-2 rounded-full text-primary hover:text-accent border border-primary/20 hover:border-accent transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent/20"
          >
            {category}
          </button>
        ))}
      </div>

      <!-- Featured Post -->
      <div class="mb-16" data-aos="fade-up" data-aos-delay="400">
        <div class="group glass rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-500">
          <div class="grid md:grid-cols-2 gap-8">
            <div class="relative overflow-hidden aspect-video md:aspect-auto">
              <Image
                src={posts[0].image}
                alt={posts[0].title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                width={800}
                height={600}
              />
            </div>
            <div class="p-8 flex flex-col justify-center">
              <span class="text-accent text-sm font-semibold tracking-wider uppercase mb-4">{posts[0].category}</span>
              <h2 class="text-2xl md:text-3xl font-bold text-primary mb-4 group-hover:text-accent transition-colors">
                {posts[0].title}
              </h2>
              <p class="text-secondary mb-6">{posts[0].excerpt}</p>
              <div class="flex items-center text-sm text-secondary mb-6">
                <span>{posts[0].author}</span>
                <span class="mx-2">•</span>
                <span>{new Date(posts[0].date).toLocaleDateString('pl-PL', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
                <span class="mx-2">•</span>
                <span>{posts[0].readTime}</span>
              </div>
              <a 
                href={`/blog/${posts[0].slug}`}
                class="inline-flex items-center text-accent group-hover:translate-x-2 transition-transform duration-300"
              >
                <span class="font-medium">Czytaj więcej</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Posts Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.slice(1).map((post, index) => (
          <article 
            class="group glass rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-500"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="relative overflow-hidden aspect-video">
              <Image
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                width={600}
                height={400}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-primary/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
            <div class="p-6">
              <span class="text-accent text-sm font-semibold tracking-wider uppercase mb-2 block">{post.category}</span>
              <h3 class="text-xl font-bold text-primary mb-3 group-hover:text-accent transition-colors">
                {post.title}
              </h3>
              <p class="text-secondary mb-4 line-clamp-2">{post.excerpt}</p>
              <div class="flex items-center text-sm text-secondary mb-4">
                <span>{post.author}</span>
                <span class="mx-2">•</span>
                <span>{new Date(post.date).toLocaleDateString('pl-PL', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
                <span class="mx-2">•</span>
                <span>{post.readTime}</span>
              </div>
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-accent group-hover:translate-x-2 transition-transform duration-300"
              >
                <span class="font-medium">Czytaj więcej</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Newsletter Section -->
      <div class="mt-24 text-center glass p-12 rounded-2xl" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-primary mb-6">
          Zapisz się do newslettera
        </h2>
        <p class="text-xl text-secondary mb-8 max-w-2xl mx-auto">
          Otrzymuj najnowsze artykuły i porady bezpośrednio na swoją skrzynkę
        </p>
        <form class="max-w-md mx-auto flex gap-4">
          <input 
            type="email" 
            placeholder="Twój adres email" 
            class="flex-1 px-6 py-3 rounded-full border border-gray-200 focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20"
          />
          <button 
            type="submit"
            class="px-8 py-3 rounded-full bg-accent text-white hover:bg-accent/90 transition-colors duration-300"
          >
            Zapisz się
          </button>
        </form>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style> 