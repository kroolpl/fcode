---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import Post1 from '../assets/images/blog/post1.jpg';
import Post2 from '../assets/images/blog/post2.jpg';
import Post3 from '../assets/images/blog/post3.jpg';

const posts = [
  {
    title: 'Trendy w projektowaniu stron internetowych na rok 2024',
    excerpt: 'Poznaj najnowsze trendy w projektowaniu stron internetowych, które zdominują rok 2024.',
    image: Post1,
    category: 'Design',
    date: '12 marca 2024',
    readTime: '5 min',
    slug: 'trendy-projektowanie-2024'
  },
  {
    title: 'Jak zwiększyć konwersję w sklepie internetowym?',
    excerpt: 'Praktyczne wskazówki, które pomogą Ci zwiększyć sprzedaż w Twoim e-commerce.',
    image: Post2,
    category: 'E-commerce',
    date: '8 marca 2024',
    readTime: '7 min',
    slug: 'zwiekszanie-konwersji'
  },
  {
    title: 'Sztuczna inteligencja w marketingu internetowym',
    excerpt: 'Dowiedz się, jak wykorzystać AI do optymalizacji działań marketingowych.',
    image: Post3,
    category: 'Marketing',
    date: '1 marca 2024',
    readTime: '6 min',
    slug: 'ai-w-marketingu'
  }
];

const categories = ['Wszystkie', 'Design', 'E-commerce', 'Marketing', 'Technologia'];
---

<Layout title="Blog - Nowoczesna Agencja Interaktywna">
  <Navbar />
  
  <main class="min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4" data-aos="fade-up">
          Blog
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-primary mt-4 mb-6" data-aos="fade-up" data-aos-delay="100">
          Wiedza i <span class="text-accent">inspiracje</span>
        </h1>
        <p class="text-xl text-secondary max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
          Najnowsze trendy, porady i analizy ze świata technologii i designu
        </p>
      </div>

      <!-- Categories -->
      <div class="flex flex-wrap justify-center gap-4 mb-16" data-aos="fade-up" data-aos-delay="300">
        {categories.map((category) => (
          <button 
            class="px-6 py-2 rounded-full text-primary hover:text-accent border border-primary/20 hover:border-accent transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent/20"
          >
            {category}
          </button>
        ))}
      </div>

      <!-- Blog Posts Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {posts.map((post, index) => (
          <article 
            class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 group"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="relative overflow-hidden aspect-video">
              <Image
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                width={600}
                height={400}
                format="webp"
                quality={90}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                <div class="absolute bottom-4 left-4">
                  <span class="px-3 py-1 bg-accent/90 text-white text-sm rounded-full">
                    {post.category}
                  </span>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex items-center text-sm text-secondary mb-4">
                <span>{post.date}</span>
                <span class="mx-2">•</span>
                <span>{post.readTime} czytania</span>
              </div>
              <h2 class="text-xl font-bold text-primary mb-3 group-hover:text-accent transition-colors">
                {post.title}
              </h2>
              <p class="text-secondary mb-4">
                {post.excerpt}
              </p>
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-accent group-hover:translate-x-2 transition-transform"
              >
                <span class="font-medium">Czytaj więcej</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Newsletter Section -->
      <div class="max-w-3xl mx-auto text-center glass p-12 rounded-2xl" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-primary mb-6">
          Zapisz się do newslettera
        </h2>
        <p class="text-xl text-secondary mb-8">
          Bądź na bieżąco z najnowszymi trendami i poradami ze świata technologii
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input
            type="email"
            placeholder="Twój adres email"
            class="flex-1 px-6 py-3 rounded-full bg-white border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
            required
          />
          <button
            type="submit"
            class="px-8 py-3 rounded-full bg-accent text-white hover:scale-105 transition-transform font-medium"
          >
            Zapisz się
          </button>
        </form>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style> 