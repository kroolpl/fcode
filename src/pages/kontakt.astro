---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import ContactImage from '../assets/images/contact.png';

const contactMethods = [
  {
    icon: 'phone',
    title: 'Zadzwoń do nas',
    value: '+48 123 456 789',
    href: 'tel:+48123456789',
    description: 'Porozmawiajmy o Twoim projekcie'
  },
  {
    icon: 'email',
    title: 'Napisz do nas',
    value: 'kontakt@nowoczesna.pl',
    href: 'mailto:kontakt@nowoczesna.pl',
    description: 'Odpowiemy najszybciej jak to możliwe'
  },
  {
    icon: 'location',
    title: 'Odwiedź nas',
    value: 'ul. Boya-Żeleńskiego 4/9, 33-100 Tarnów',
    href: 'https://goo.gl/maps/your-location-link',
    description: 'Pon - Pt: 9:00 - 17:00'
  }
];

const icons = {
  phone: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />`,
  email: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  location: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />`
};
---

<Layout title="Kontakt - Nowoczesna Agencja Interaktywna">
  <Navbar />
  
  <main class="min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section - Swapped order of grid items -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <!-- Contact Image - Moved to left -->
        <div class="relative" data-aos="fade-right">
          <div class="relative">
            <Image
              src={ContactImage}
              alt="Contact Illustration"
              class="w-full h-auto rounded-2xl relative z-10"
              width={800}
              height={600}
              format="webp"
              quality={90}
            />
            <!-- Simple shadow -->
            <div 
              class="absolute inset-0 rounded-2xl shadow-2xl pointer-events-none"
              style="background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.1));"
            ></div>
          </div>
          
          <!-- Decorative elements -->
          <div class="absolute -z-1 -top-10 -right-10 w-64 h-64 bg-accent/10 rounded-full blur-2xl pointer-events-none"></div>
          <div class="absolute -z-1 -bottom-10 -left-10 w-64 h-64 bg-primary/10 rounded-full blur-2xl pointer-events-none"></div>
        </div>

        <!-- Text Content - Moved to right -->
        <div class="text-left" data-aos="fade-left">
          <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4">
            Kontakt
          </span>
          <h1 class="text-4xl md:text-5xl font-bold text-primary mt-4 mb-6">
            Porozmawiajmy o Twoim <span class="text-accent">projekcie</span>
          </h1>
          <p class="text-xl text-secondary mb-8">
            Jesteśmy tutaj, aby pomóc Ci w realizacji Twojej wizji. Skontaktuj się z nami i rozpocznij swoją cyfrową transformację.
          </p>
          
          <!-- Contact Methods -->
          <div class="space-y-6">
            {contactMethods.map(method => (
              <a 
                href={method.href}
                class="flex items-center p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group"
                data-aos="fade-up"
              >
                <div class="bg-accent/10 p-3 rounded-lg mr-4 group-hover:scale-110 transition-transform">
                  <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    class="h-6 w-6 text-accent" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke="currentColor"
                    set:html={icons[method.icon]}
                  />
                </div>
                <div>
                  <h3 class="font-semibold text-primary">{method.title}</h3>
                  <p class="text-secondary text-sm">{method.description}</p>
                  <p class="text-accent mt-1">{method.value}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Contact Form and Map Section -->
      <div class="grid lg:grid-cols-2 gap-8 items-start">
        <!-- Contact Form Section -->
        <div data-aos="fade-right">
          <div class="bg-white p-8 rounded-2xl shadow-sm h-full">
            <h2 class="text-2xl font-bold text-primary mb-6">Formularz kontaktowy</h2>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-primary mb-2">Imię i nazwisko</label>
                  <input
                    type="text"
                    id="name"
                    class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                    required
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-primary mb-2">Email</label>
                  <input
                    type="email"
                    id="email"
                    class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-primary mb-2">Wiadomość</label>
                <textarea
                  id="message"
                  rows="6"
                  class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                  required
                ></textarea>
              </div>
              
              <button
                type="submit"
                class="w-full bg-accent text-white px-8 py-4 rounded-xl hover:scale-[1.02] transition-transform font-medium"
              >
                Wyślij wiadomość
              </button>
            </form>
          </div>
        </div>

        <!-- Map Section -->
        <div data-aos="fade-left">
          <div class="bg-white p-8 rounded-2xl shadow-sm h-full">
            <h2 class="text-2xl font-bold text-primary mb-6">Gdzie nas znaleźć?</h2>
            <div class="relative w-full h-[400px] rounded-xl overflow-hidden">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d20506.942666595154!2d20.979599!3d50.023203!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x473d83c9108773c3%3A0x6b354eca4f3f67e4!2sFCODE%20-%20projektowanie%20stron%20i%20sklep%C3%B3w%20internetowych%20Tarn%C3%B3w!5e0!3m2!1spl!2spl!4v1732660855660!5m2!1spl!2spl"
                class="absolute inset-0 w-full h-full border-0 filter grayscale hover:grayscale-0 transition-all duration-500"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
            <!-- Address Info -->
            <div class="mt-6 p-4 bg-gray-50 rounded-xl">
              <div class="flex items-center text-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="font-medium text-primary">Adres:</p>
                  <p>ul. Boya-Żeleńskiego 4/9, 33-100 Tarnów</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>