---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { Image } from 'astro:assets';
import ContactImage from '../assets/images/contact.png';
import Footer from '../components/Footer.astro';

---

<Layout title="Kontakt - Nowoczesna Agencja Interaktywna">
  <Navbar />
  
  <main class="min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <!-- Text Content -->
        <div class="text-left" data-aos="fade-right">
          <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4">Kontakt</span>
          <h1 class="text-4xl md:text-5xl font-bold text-primary mt-4">
            Porozmawiajmy o Twoim <span class="text-accent">projekcie</span>
          </h1>
          <p class="text-secondary mt-6 max-w-2xl text-lg mb-8">
            Jesteśmy tutaj, aby pomóc Ci w realizacji Twojej wizji. Skontaktuj się z nami, aby rozpocząć współpracę.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="tel:+48123456789" class="flex items-center space-x-2 bg-accent/5 px-4 py-2 rounded-full hover:bg-accent/10 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-secondary">+48 123 456 789</span>
            </a>
            <a href="mailto:kontakt@nowoczesna.pl" class="flex items-center space-x-2 bg-accent/5 px-4 py-2 rounded-full hover:bg-accent/10 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-secondary">kontakt@nowoczesna.pl</span>
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative" data-aos="fade-left">
          <div class="relative animate-float group">
            <div class="relative transition-transform duration-500 ease-out group-hover:scale-[1.02]">
              <Image
                src={ContactImage}
                alt="Contact Illustration"
                class="w-full h-auto rounded-2xl relative z-10 scale-x-[-1]"
                width={800}
                height={600}
                format="webp"
                quality={90}
              />
              <!-- Shadow overlay with gradient mask -->
              <div 
                class="absolute inset-0 rounded-2xl transition-all duration-500"
                style="box-shadow: 0 30px 30px -15px rgba(0, 0, 0, 0.9);
                       mask-image: linear-gradient(to top, black 80%, transparent 1%);"
              ></div>
            </div>
            
            <!-- Improved gradient overlay -->
            <div 
              class="absolute inset-0 rounded-2xl z-20 overflow-hidden animate-shine"
              style="background: linear-gradient(
                110deg,
                transparent 25%,
                rgba(255, 255, 255, 0.1) 45%,
                transparent 55%
              );
              background-size: 200% 100%;"
            ></div>
          </div>
          
          <!-- Decorative elements -->
          <div class="absolute -z-10 -top-20 -right-20 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-blob"></div>
          <div class="absolute -z-10 -bottom-20 -left-20 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
        </div>
      </div>

      <!-- Contact Section -->
      <div class="grid lg:grid-cols-3 gap-8 mb-24">
        <!-- Contact Info - Left Column -->
        <div class="lg:col-span-1 space-y-8">
          <!-- Contact Cards -->
          <div class="glass p-6 rounded-xl hover:shadow-lg transition-all duration-300" data-aos="fade-up">
            <div class="flex items-center space-x-4">
              <div class="bg-accent/10 p-4 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary">Telefon</h3>
                <a href="tel:+48123456789" class="text-secondary hover:text-accent transition-colors">+48 123 456 789</a>
              </div>
            </div>
          </div>

          <div class="glass p-6 rounded-xl hover:shadow-lg transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
            <div class="flex items-center space-x-4">
              <div class="bg-accent/10 p-4 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary">Email</h3>
                <a href="mailto:kontakt@nowoczesna.pl" class="text-secondary hover:text-accent transition-colors">kontakt@nowoczesna.pl</a>
              </div>
            </div>
          </div>

          <div class="glass p-6 rounded-xl hover:shadow-lg transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
            <div class="flex items-center space-x-4">
              <div class="bg-accent/10 p-4 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary">Godziny pracy</h3>
                <p class="text-secondary">Pon - Pt: 9:00 - 17:00</p>
              </div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="glass p-6 rounded-xl" data-aos="fade-up" data-aos-delay="300">
            <h3 class="font-semibold text-primary mb-4">Znajdź nas</h3>
            <div class="flex space-x-4">
              <a href="#" class="bg-accent/10 p-3 rounded-full text-accent hover:bg-accent hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
              <a href="#" class="bg-accent/10 p-3 rounded-full text-accent hover:bg-accent hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
              <a href="#" class="bg-accent/10 p-3 rounded-full text-accent hover:bg-accent hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form - Right Column -->
        <div class="lg:col-span-2" data-aos="fade-left">
          <div class="glass p-8 rounded-xl">
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-primary mb-2">Imię i nazwisko</label>
                  <input
                    type="text"
                    id="name"
                    class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                    required
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-primary mb-2">Email</label>
                  <input
                    type="email"
                    id="email"
                    class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-primary mb-2">Temat</label>
                <input
                  type="text"
                  id="subject"
                  class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                  required
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-primary mb-2">Wiadomość</label>
                <textarea
                  id="message"
                  rows="4"
                  class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                  required
                ></textarea>
              </div>
              
              <button
                type="submit"
                class="w-full bg-accent text-white px-6 py-3 rounded-lg hover:bg-opacity-90 transition-all font-medium"
              >
                Wyślij wiadomość
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="glass p-8 rounded-xl" data-aos="fade-up">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold text-primary">Gdzie nas znaleźć?</h2>
          <a 
            href="https://goo.gl/maps/your-location-link" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center text-accent hover:text-primary transition-colors group"
          >
            <span class="font-medium">Otwórz w Google Maps</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
        
        <div class="p-1 bg-white rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.12)]">
          <div class="relative w-full h-[500px] rounded-lg overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d20506.942666595154!2d20.979599!3d50.023203!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x473d83c9108773c3%3A0x6b354eca4f3f67e4!2sFCODE%20-%20projektowanie%20stron%20i%20sklep%C3%B3w%20internetowych%20Tarn%C3%B3w!5e0!3m2!1spl!2spl!4v1732660855660!5m2!1spl!2spl"
              class="absolute inset-0 w-full h-full border-0 filter grayscale hover:grayscale-0 transition-all duration-500"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>

            <!-- Improved overlay card -->
            <div class="absolute top-4 left-4 glass p-6 rounded-xl shadow-lg max-w-sm bg-white/95 backdrop-blur-sm border border-white/20 transition-all duration-300 hover:shadow-xl">
              <h3 class="text-xl font-bold text-primary mb-4">Nasza lokalizacja</h3>
              <div class="space-y-4">
                <div class="flex items-center text-secondary group">
                  <div class="bg-accent/10 p-2 rounded-lg mr-3 group-hover:bg-accent/20 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-primary">Adres:</p>
                    <p>ul. Boya-Żeleńskiego 4/9<br/>33-100 Tarnów</p>
                  </div>
                </div>
                <div class="flex items-center text-secondary group">
                  <div class="bg-accent/10 p-2 rounded-lg mr-3 group-hover:bg-accent/20 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-primary">Godziny otwarcia:</p>
                    <p>Pon - Pt: 9:00 - 17:00</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes shine {
    to { background-position: 200% center; }
  }

  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -20px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(20px, 20px) scale(1.05); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-shine {
    animation: shine 8s linear infinite;
  }

  .animate-blob {
    animation: blob 15s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>