---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import ThinkImage from '../assets/images/think.png';

const services = [
  {
    icon: 'web',
    title: 'Strony internetowe',
    description: 'Projektujemy i wdrażamy nowoczesne strony www, które wyróżniają się designem i wydajnością.',
    features: [
      'Responsywny design',
      'Optymalizacja SEO',
      'Szybkie ładowanie',
      'System CMS'
    ]
  },
  {
    icon: 'shop',
    title: 'Sklepy internetowe',
    description: 'Tworzymy zaawansowane platformy e-commerce, które zwiększają sprzedaż.',
    features: [
      'Integracje płatności',
      'Panel administracyjny',
      'Systemy lojalnościowe',
      'Analityka sprzedaży'
    ]
  },
  {
    icon: 'app',
    title: 'Aplikacje webowe',
    description: 'Rozwijamy dedykowane aplikacje internetowe dostosowane do potrzeb Twojego biznesu.',
    features: [
      'Architektura SaaS',
      'Skalowalność',
      'Bezpieczeństwo',
      'API REST'
    ]
  },
  {
    icon: 'marketing',
    title: 'Marketing internetowy',
    description: 'Kompleksowo wspieramy promocję Twojej marki w internecie.',
    features: [
      'Kampanie Google Ads',
      'Social Media',
      'Content Marketing',
      'Analityka'
    ]
  }
];

const icons = {
  web: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />`,
  shop: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
  app: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
  marketing: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
};
---

<Layout title="Usługi - Nowoczesna Agencja Interaktywna">
  <Navbar />
  
  <main class="min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <div class="text-left" data-aos="fade-right">
          <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4">
            Nasze usługi
          </span>
          <h1 class="text-4xl md:text-5xl font-bold text-primary mt-4 mb-6">
            Kompleksowe <span class="text-accent">rozwiązania</span> cyfrowe
          </h1>
          <p class="text-xl text-secondary">
            Pomagamy firmom rozwijać się w świecie cyfrowym poprzez nowoczesne rozwiązania technologiczne i marketingowe.
          </p>
        </div>

        <div class="relative" data-aos="fade-left">
          <div class="relative group">
            <Image
              src={ThinkImage}
              alt="Services Illustration"
              class="w-full h-auto rounded-2xl relative z-10"
              width={800}
              height={600}
              format="webp"
              quality={90}
            />
            <div 
              class="absolute inset-0 rounded-2xl transition-all duration-500"
              style="box-shadow: 0 30px 60px -15px rgba(0, 0, 0, 0.25);"
            ></div>
          </div>
          
          <!-- Decorative elements -->
          <div class="absolute -z-10 -top-10 -right-10 w-64 h-64 bg-accent/10 rounded-full blur-2xl"></div>
          <div class="absolute -z-10 -bottom-10 -left-10 w-64 h-64 bg-primary/10 rounded-full blur-2xl"></div>
        </div>
      </div>

      <!-- Services Grid -->
      <div class="grid md:grid-cols-2 gap-8 mb-24">
        {services.map((service, index) => (
          <div 
            class="glass p-8 rounded-2xl group hover:shadow-xl transition-all duration-500"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="mb-6">
              <div class="bg-accent/10 w-16 h-16 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[service.icon]} />
              </div>
              <h3 class="text-2xl font-bold text-primary mb-2">{service.title}</h3>
              <p class="text-secondary">{service.description}</p>
            </div>

            <div class="space-y-3">
              {service.features.map((feature) => (
                <div class="flex items-center text-secondary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mr-2 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {feature}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="text-center glass p-12 rounded-2xl" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-primary mb-6">
          Gotowy na cyfrową transformację?
        </h2>
        <p class="text-xl text-secondary mb-8 max-w-2xl mx-auto">
          Skontaktuj się z nami i opowiedz o swoim projekcie. Pomożemy Ci wybrać najlepsze rozwiązanie.
        </p>
        <a
          href="/kontakt"
          class="inline-flex items-center justify-center px-8 py-3 rounded-full text-lg font-medium bg-accent text-white hover:scale-105 transition-transform"
        >
          <span class="flex items-center">
            Rozpocznij projekt
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>