---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import contactImage from '../../assets/images/contact.png';
import Footer from '../../components/en/Footer.astro';
---

<Layout title="Contact - Get in Touch">
  <main class="relative min-h-screen bg-gradient-to-br from-primary/5 via-light to-white">
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-blob"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#203951]/10 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 relative">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <div class="inline-block" data-aos="fade-down">
          <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium bg-accent/10 text-accent mb-6">
            <span class="animate-pulse mr-2">ðŸ“ž</span>
            We're here for you
          </span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-6" data-aos="fade-up">
          Start your
          <span class="bg-gradient-to-r from-accent to-[#203951] bg-clip-text text-transparent">
            digital transformation
          </span>
        </h1>
        <p class="text-xl text-secondary max-w-2xl mx-auto mb-8" data-aos="fade-up" data-aos-delay="100">
          Get in touch to discuss your project. We're ready to help you achieve success in the digital world.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Contact Form -->
        <div class="glass rounded-2xl p-8 shadow-xl" data-aos="fade-right">
          <form class="space-y-6" x-data="{ 
            formData: { name: '', email: '', phone: '', message: '' },
            isSubmitting: false,
            async submitForm() {
              this.isSubmitting = true;
              // Simulate form submission
              await new Promise(resolve => setTimeout(resolve, 1000));
              this.isSubmitting = false;
              alert('Thank you for your message! We will respond as soon as possible.');
              this.formData = { name: '', email: '', phone: '', message: '' };
            }
          }" @submit.prevent="submitForm">
            <div class="space-y-2">
              <label for="name" class="block text-sm font-medium text-primary">Full Name</label>
              <input
                type="text"
                id="name"
                x-model="formData.name"
                class="w-full px-4 py-3 rounded-lg bg-white/50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all duration-300"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="email" class="block text-sm font-medium text-primary">Email</label>
              <input
                type="email"
                id="email"
                x-model="formData.email"
                class="w-full px-4 py-3 rounded-lg bg-white/50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all duration-300"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="phone" class="block text-sm font-medium text-primary">Phone</label>
              <input
                type="tel"
                id="phone"
                x-model="formData.phone"
                class="w-full px-4 py-3 rounded-lg bg-white/50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all duration-300"
              />
            </div>

            <div class="space-y-2">
              <label for="message" class="block text-sm font-medium text-primary">Message</label>
              <textarea
                id="message"
                x-model="formData.message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg bg-white/50 border border-gray-200 focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all duration-300"
                required
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-8 py-4 bg-[#203951] text-white rounded-lg font-medium text-lg hover:bg-[#2a4b6a] transform hover:scale-105 transition-all duration-300 flex items-center justify-center"
              :class="{ 'opacity-75 cursor-wait': isSubmitting }"
              :disabled="isSubmitting"
            >
              <span x-show="!isSubmitting">Send Message</span>
              <span x-show="isSubmitting" class="flex items-center">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Sending...
              </span>
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8" data-aos="fade-left">
          <div class="relative">
            <Image
              src={contactImage}
              alt="Contact"
              class="w-full h-auto rounded-2xl shadow-xl transform hover:scale-105 transition-duration-300"
              width={600}
              height={400}
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
          </div>

          <div class="glass rounded-2xl p-8 space-y-6">
            <h3 class="text-2xl font-bold text-primary mb-4">Contact Details</h3>
            
            <div class="space-y-4">
              <div class="flex items-center space-x-4 group">
                <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center group-hover:bg-accent/20 transition-colors duration-300">
                  <svg class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-primary font-medium">Phone</p>
                  <a href="tel:+48123456789" class="text-secondary hover:text-accent transition-colors duration-300">+48 123 456 789</a>
                </div>
              </div>

              <div class="flex items-center space-x-4 group">
                <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center group-hover:bg-accent/20 transition-colors duration-300">
                  <svg class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-primary font-medium">Email</p>
                  <a href="mailto:contact@example.com" class="text-secondary hover:text-accent transition-colors duration-300">contact@example.com</a>
                </div>
              </div>

              <div class="flex items-center space-x-4 group">
                <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center group-hover:bg-accent/20 transition-colors duration-300">
                  <svg class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-primary font-medium">Address</p>
                  <p class="text-secondary">123 Example Street<br/>00-000 Warsaw</p>
                </div>
              </div>
            </div>

            <!-- Social Media Links -->
            <div class="pt-6 border-t border-gray-200">
              <h4 class="text-lg font-medium text-primary mb-4">Find us on social media</h4>
              <div class="flex space-x-4">
                {[
                  { name: 'Facebook', icon: 'M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z' },
                  { name: 'Twitter', icon: 'M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z' },
                  { name: 'LinkedIn', icon: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z' },
                ].map((social) => (
                  <a
                    href={`https://${social.name.toLowerCase()}.com`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center hover:bg-accent/20 transition-colors duration-300 group"
                  >
                    <svg class="w-6 h-6 text-accent" viewBox="0 0 24 24">
                      <path fill="currentColor" d={social.icon}/>
                    </svg>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mt-16 glass rounded-2xl p-8" data-aos="fade-up">
        <h3 class="text-2xl font-bold text-primary mb-6">Our Location</h3>
        <div class="w-full h-[400px] rounded-lg overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2443.3888877589333!2d21.017499776781736!3d52.237840071620726!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471ecc8c92692e49%3A0xc2e97552d0017aa0!2sPalac%20Kultury%20i%20Nauki!5e0!3m2!1sen!2spl!4v1708351549813!5m2!1sen!2spl"
            width="100%"
            height="100%"
            style="border:0;"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -20px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(20px, 20px) scale(1.1); }
  }

  .animate-blob {
    animation: blob 10s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style> 