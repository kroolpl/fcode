---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/en/Footer.astro';
import { Image } from 'astro:assets';
import BossImage from '../../assets/images/boss.jpeg';

const stats = [
  { number: '10+', label: 'Years of experience' },
  { number: '100+', label: 'Satisfied clients' },
  { number: '250+', label: 'Completed projects' },
  { number: '24/7', label: 'Technical support' }
];

const values = [
  {
    icon: 'innovation',
    title: 'Innovation',
    description: 'We constantly monitor the latest trends and technologies to deliver modern solutions.'
  },
  {
    icon: 'quality',
    title: 'Quality',
    description: 'We execute each project with the utmost attention to detail and performance.'
  },
  {
    icon: 'partnership',
    title: 'Partnership',
    description: 'We build long-lasting relationships based on trust and mutual understanding.'
  }
];

const icons = {
  innovation: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
  quality: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />`,
  partnership: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />`
};
---

<Layout title="About Us - Modern Interactive Agency">
  <Navbar />
  
  <main class="min-h-screen pt-32 pb-20 bg-gradient-to-br from-light to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <!-- Image Section -->
        <div class="relative max-w-lg mx-auto lg:mx-0" data-aos="fade-right">
          <div class="relative">
            <Image
              src={BossImage}
              alt="CEO of Modern Agency"
              class="w-full h-auto rounded-2xl relative z-10"
              width={600}
              height={450}
              format="webp"
              quality={90}
            />
            <div 
              class="absolute inset-0 rounded-2xl shadow-2xl pointer-events-none"
              style="background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.1));"
            ></div>
          </div>
          
          <!-- Decorative elements -->
          <div class="absolute -z-1 -top-10 -right-10 w-48 h-48 bg-accent/10 rounded-full blur-2xl pointer-events-none"></div>
          <div class="absolute -z-1 -bottom-10 -left-10 w-48 h-48 bg-primary/10 rounded-full blur-2xl pointer-events-none"></div>
        </div>

        <!-- Text Content -->
        <div class="text-left" data-aos="fade-left">
          <span class="text-accent uppercase tracking-wider font-semibold bg-accent/10 px-4 py-2 rounded-full inline-block mb-4">
            About Us
          </span>
          <h1 class="text-4xl md:text-5xl font-bold text-primary mt-4 mb-6">
            Creating the <span class="text-accent">future</span> of digital business
          </h1>
          <p class="text-xl text-secondary mb-8">
            For over a decade, we've been helping companies with digital transformation, delivering innovative technological and marketing solutions.
          </p>
          
          <!-- Stats Grid -->
          <div class="grid grid-cols-2 gap-6">
            {stats.map(stat => (
              <div class="bg-white p-4 rounded-xl shadow-sm" data-aos="fade-up">
                <div class="text-3xl font-bold text-accent mb-1">{stat.number}</div>
                <div class="text-secondary text-sm">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Values Section -->
      <div class="mb-24">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6" data-aos="fade-up">
            Our Values
          </h2>
          <p class="text-xl text-secondary max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
            We follow clear principles that allow us to deliver the highest quality services and build lasting relationships with clients.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {values.map((value, index) => (
            <div 
              class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="bg-accent/10 w-16 h-16 rounded-xl flex items-center justify-center mb-6">
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="h-8 w-8 text-accent" 
                  fill="none" 
                  viewBox="0 0 24 24" 
                  stroke="currentColor"
                  set:html={icons[value.icon]}
                />
              </div>
              <h3 class="text-xl font-bold text-primary mb-4">{value.title}</h3>
              <p class="text-secondary">{value.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center glass p-12 rounded-2xl" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-primary mb-6">
          Ready to collaborate?
        </h2>
        <p class="text-xl text-secondary mb-8 max-w-2xl mx-auto">
          Get in touch and tell us about your project. We'll help you achieve success in the digital world.
        </p>
        <a
          href="/en/contact"
          class="inline-flex items-center justify-center px-8 py-3 rounded-full text-lg font-medium bg-accent text-white hover:scale-105 transition-transform"
        >
          <span class="flex items-center">
            Start collaboration
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout> 