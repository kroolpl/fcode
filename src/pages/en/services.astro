---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import thinkImage from '../../assets/images/think.png';
import Footer from '../../components/en/Footer.astro';

const services = [
  {
    icon: 'web',
    title: 'Websites',
    description: 'We create responsive and modern websites that attract customers and build your brand image.',
    features: [
      'Responsive design',
      'SEO optimization',
      'Fast loading',
      'Intuitive CMS'
    ]
  },
  {
    icon: 'shop',
    title: 'Online Stores',
    description: 'We design and implement professional e-commerce platforms that increase sales and customer satisfaction.',
    features: [
      'Intuitive admin panel',
      'Payment integrations',
      'Loyalty systems',
      'Sales analytics'
    ]
  },
  {
    icon: 'app',
    title: 'Web Applications',
    description: 'We create advanced web applications tailored to your business\'s individual needs.',
    features: [
      'Performance & scalability',
      'Data security',
      'API integrations',
      '24/7 technical support'
    ]
  }
];

const icons = {
  web: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />`,
  shop: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
  app: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`
};
---

<Layout title="Services - Modern Digital Solutions">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden perspective-1000">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-light to-white">
      <div class="absolute inset-0" style="background: radial-gradient(circle at 50% 50%, rgba(32, 57, 81, 0.1) 0%, transparent 50%);"></div>
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-0 right-0 w-[40rem] h-[40rem] bg-accent/5 rounded-full blur-3xl animate-blob"></div>
        <div class="absolute bottom-0 left-0 w-[40rem] h-[40rem] bg-[#203951]/5 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/4 w-[30rem] h-[30rem] bg-primary/5 rounded-full blur-3xl animate-blob animation-delay-4000"></div>
      </div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-10 w-8 h-8 bg-accent/20 rounded-full animate-float-slow"></div>
      <div class="absolute bottom-20 right-10 w-6 h-6 bg-primary/20 rounded-full animate-float-slower"></div>
      <div class="absolute top-1/2 left-1/4 w-10 h-10 bg-[#203951]/20 rounded-full animate-float"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 relative">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="text-center lg:text-left">
          <div class="inline-block transform hover:scale-105 transition-transform" data-aos="fade-down">
            <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium bg-accent/10 text-accent">
              <span class="animate-pulse mr-2">ðŸ’¡</span>
              <span class="typing-text">Innovative solutions for your business</span>
            </span>
          </div>
          
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-primary mt-8 mb-6 leading-tight" data-aos="fade-up">
            <span class="relative inline-block">
              Transforming
              <div class="absolute bottom-0 left-0 w-full h-2 bg-accent/20 transform -skew-x-12"></div>
            </span>
            <br />
            <span class="bg-gradient-to-r from-accent via-[#203951] to-primary bg-clip-text text-transparent animate-gradient-x">
              digital future
            </span>
          </h1>
          
          <p class="text-xl md:text-2xl text-secondary mb-12 max-w-3xl" data-aos="fade-up" data-aos-delay="100">
            We create advanced digital solutions that drive your business growth and set new industry standards.
          </p>

          <!-- CTA Section -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start" data-aos="fade-up" data-aos-delay="200">
            <a href="#services" class="group relative px-8 py-4 bg-[#203951] text-white rounded-full font-medium text-lg overflow-hidden transform hover:scale-105 transition-all duration-300">
              <span class="relative z-10 flex items-center">
                View our services
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-accent to-[#203951] opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </a>
            
            <a href="/en/contact" class="group relative px-8 py-4 border-2 border-[#203951] text-[#203951] rounded-full font-medium text-lg overflow-hidden hover:text-white transition-colors duration-300">
              <span class="relative z-10 flex items-center">
                Free consultation
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </span>
              <div class="absolute inset-0 bg-[#203951] transform -translate-x-full group-hover:translate-x-0 transition-transform"></div>
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative" data-aos="fade-left">
          <div class="relative z-10 animate-float">
            <Image
              src={thinkImage}
              alt="Innovative thinking"
              class="w-full h-auto max-w-2xl mx-auto filter drop-shadow-2xl transform hover:scale-105 transition-transform duration-500"
              width={600}
              height={600}
            />
            <!-- Decorative circles -->
            <div class="absolute -top-10 -right-10 w-20 h-20 bg-accent/10 rounded-full animate-pulse"></div>
            <div class="absolute -bottom-10 -left-10 w-20 h-20 bg-primary/10 rounded-full animate-pulse animation-delay-2000"></div>
          </div>
          <!-- Glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-accent/20 to-primary/20 blur-3xl opacity-30 animate-pulse"></div>
        </div>
      </div>

      <!-- Service Cards -->
      <div id="services" class="grid md:grid-cols-3 gap-8 perspective mt-32">
        {services.map((service, index) => (
          <div 
            class="service-card glass p-8 rounded-2xl transition-all duration-500 hover:shadow-2xl transform hover:-translate-y-2 hover:rotate-y-5 group"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="bg-gradient-to-br from-accent/10 to-[#203951]/10 w-16 h-16 rounded-xl flex items-center justify-center mb-6 transform group-hover:scale-110 group-hover:rotate-12 transition-all duration-300">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-8 w-8 text-accent transform group-hover:scale-110 transition-transform" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
                set:html={icons[service.icon]}
              />
            </div>
            
            <h3 class="text-2xl font-bold text-primary mb-4 group-hover:text-accent transition-colors">
              {service.title}
            </h3>
            
            <p class="text-secondary mb-6">
              {service.description}
            </p>
            
            <ul class="space-y-3">
              {service.features.map(feature => (
                <li class="flex items-center text-secondary group-hover:text-primary transition-colors">
                  <svg class="h-5 w-5 text-accent mr-2 transform group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }

  .perspective {
    perspective: 2000px;
  }

  .rotate-y-5 {
    transform: rotateY(5deg);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes float-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-30px); }
  }

  @keyframes float-slower {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-40px); }
  }

  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -20px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(20px, 20px) scale(1.1); }
  }

  @keyframes gradient-x {
    0%, 100% { background-size: 200% 100%; background-position: left center; }
    50% { background-size: 200% 100%; background-position: right center; }
  }

  .animate-float { animation: float 6s ease-in-out infinite; }
  .animate-float-slow { animation: float-slow 8s ease-in-out infinite; }
  .animate-float-slower { animation: float-slower 10s ease-in-out infinite; }
  .animate-blob { animation: blob 10s infinite; }
  .animate-gradient-x { animation: gradient-x 3s ease infinite; }
  
  .animation-delay-2000 { animation-delay: 2s; }
  .animation-delay-4000 { animation-delay: 4s; }

  .glass {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .typing-text {
    border-right: 2px solid #EF233C;
    animation: typing 3.5s steps(40, end), blink-caret 0.75s step-end infinite;
    white-space: nowrap;
    overflow: hidden;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: #EF233C }
  }
</style> 